
options {
  JAVA_UNICODE_ESCAPE = true;
  STATIC = false;

  MULTI = true;
  NODE_DEFAULT_VOID = true;
  NODE_SCOPE_HOOK = true;
  DEBUG_PARSER = false;

    //USER_CHAR_STREAM = true; // user provided CharStream - LexerInputCharStream
    //BUILD_TOKEN_MANAGER = true; // build token manager
